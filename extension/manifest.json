{
  "manifest_version": 2,
  "author": "kesselborn",
  "default_locale": "en",
  "description": "A tab manager",
  "homepage_url": "https://github.com/kesselborn/conex",
  "name": "Conex (preview)",
  "version": "0.9.14",
  "browser_action": {
    "default_title": "Conex",
    "browser_style": false,
    "default_popup": "browser-action.html",
    "default_icon": {
      "48": "icons/icon_48.png"
    }
  },
  "applications": {
    "gecko": {
      "strict_min_version": "60.0a1",
      "update_url": "https://raw.githubusercontent.com/kesselborn/conex/master/versions.json"
    }
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "MacCtrl+Space"
      }
    },
    "new-container": {
      "suggested_key": {
        "default": "Alt+Shift+N"
      }
    }
  },
  "options_ui": {
    "page": "options-ui.html",
    "browser_style": true,
    "open_in_tab": false
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "icons": {
    "48": "icons/icon_48.png"
  },
  "permissions": [
    "<all_urls>",
    "contextualIdentities",
    "cookies",
    "menus",
    "storage",
    "tabs",
    "webNavigation",
    "webRequest",
    "webRequestBlocking"
  ],
  "optional_permissions": [
    "activeTab",
    "bookmarks",
    "history",
    "notifications",
    "tabHide"
  ]
}
