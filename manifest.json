{
  "manifest_version": 2,
  "author": "kesselborn",
  "description": "__MSG_extensionDescription",
  "homepage_url": "https://github.com/kesselborn/conex",
  "default_locale": "en",
  "name": "Conex",
  "version": "0.10.0",
  "applications": {
    "gecko": {
      "id": "conex@bornkessel.com"
    }
  },
  "background": {
    "page": "conex-background.html"
  },
  "browser_action": {
    "default_title": "Conex",
    "browser_style": false,
    "default_popup": "conex-browser-action.html",
    "default_icon": {
      "48": "icons/icon_48.png"
    }
  }, 
    "options_ui": {
    "page": "conex-options-ui.html",
    "browser_style": true,
    "open_in_tab": true
  },
  "permissions": [
    "<all_urls>",
    "contextualIdentities",
    "cookies",
    "idle",
    "menus",
    "storage",
    "tabs",
    "webNavigation",
    "webRequest",
    "webRequestBlocking"
  ]
}
